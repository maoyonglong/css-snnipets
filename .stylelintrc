{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-empty-line-before": ["always", {
      "except": ["after-same-name", "inside-block", "blockless-after-same-name-blockless", "blockless-after-blockless", "first-nested"]
    }],
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["if", "else", "mixin", "each", "for", "function", "extend"]
    }],
    "scss/dollar-variable-colon-space-after": "always",
    "scss/declaration-nested-properties": "always",
    "scss/double-slash-comment-empty-line-before": ["always", {
      "except": ["first-nested"]
    }]
  }
}